{% extends 'base.html.twig' %}

{% block title %}Types de bières - Société Des Bières du Monde{% endblock %}

{% block body %}
<main class="container mb-5">
    <h1 class="mt-5 mb-5">Gestion des Types de bières</h1>
<a class="btn btn-ajout" href="{{ path('app_typebiere_new') }}">Ajouter</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typebiere in typebieres %}
            <tr>
                <td>{{ typebiere.id }}</td>
                <td>{{ typebiere.nom }}</td>
                <td>
                    <a class="btn btn-primary mb-2" href="{{ path('app_typebiere_show', {'id': typebiere.id}) }}">Voir</a>
                    <a class="btn btn-success mb-2" href="{{ path('app_typebiere_edit', {'id': typebiere.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Tableau vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    </main>
{% endblock %}
