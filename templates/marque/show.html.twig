{% extends 'base.html.twig' %}

{% block title %}Marque - Société Des Bières du Monde{% endblock %}

{% block body %}
<main class="container vh-100">
    <h1 class="mb-5 mt-5">Marque</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ marque.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ marque.nom }}</td>
            </tr>
             <tr>
                <th>Pays</th>
                <td>{{ marque.pays.nom }}</td>
            </tr>
             <tr>
                <th>Fabricant</th>
                <td>{{ marque.fabricant.nom }}</td>
            </tr>
        </tbody>
    </table>

   

    <a class="btn btn-primary mb-2 mt-3" href="{{ path('app_marque_edit', {'id': marque.id}) }}">Modifier</a>

    {{ include('marque/_delete_form.html.twig') }}
     <a class="btn btn-warning mt-4" href="{{ path('app_marque_index') }}">Retourner à la liste</a>
    </main>
{% endblock %}
