{% extends 'base.html.twig' %}

{% block title %}Fabricant{% endblock %}

{% block body %}
<main class="container vh-100">   

<h1 class="mb-5 mt-5">Fabricant</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fabricant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ fabricant.nom }}</td>
            </tr>
        </tbody>
    </table>

    

    <a class="btn btn-primary mb-2 mt-3" href="{{ path('app_fabricant_edit', {'id': fabricant.id}) }}">Modifier</a>

    {{ include('fabricant/_delete_form.html.twig') }}
    <a class="btn btn-warning mt-4" href="{{ path('app_fabricant_index') }}">Retourner la liste</a>
    </main> 
{% endblock %}
