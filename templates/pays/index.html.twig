{% extends 'base.html.twig' %}

{% block title %}Pays - Société Des Bières du Monde{% endblock %}

{% block body %}
<main class="container margebas">
    <h1 class="mt-5 mb-5">Gestion des Pays</h1>
<a class="btn btn-ajout" href="{{ path('app_pays_new') }}">Ajouter</a>
    <table class="table table-bordered table-pays">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Pays</th>
                <th>Nom Continent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.nom }}</td>
                <td>{{ pay.continent.nom }}</td>
                <td>
                    <a class="btn btn-primary mb-2" href="{{ path('app_pays_show', {'id': pay.id}) }}">Voir</a>
                    <a class="btn btn-success mb-2" href="{{ path('app_pays_edit', {'id': pay.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Tableau vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </main>
{% endblock %}
