{% extends 'base.html.twig' %}

{% block title %}Couleur index{% endblock %}

{% block body %}
<main class="container vh-100">
    <h1 class="mt-5 mb-5">Gestion des couleurs</h1>
<a href="{{ path('app_couleur_new') }}" class="btn btn-ajout">Ajouter</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for couleur in couleurs %}
            <tr>
                <td>{{ couleur.id }}</td>
                <td>{{ couleur.nom }}</td>
                <td>
                    <a  class="btn btn-primary mb-2" href="{{ path('app_couleur_show', {'id': couleur.id}) }}">Voir</a>
                    <a class="btn btn-success mb-2" href="{{ path('app_couleur_edit', {'id': couleur.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Tableau vide</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
    
{% endblock %}

